<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <!-- Si ponemos esta propiedad nos crea las tablas de la base de datos -->
        <!--<property name="hibernate.hbm2ddl.auto">create</property>-->
        <!-- Pool de conexiones -->
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.connection.datasource">java:comp/env/jdbc/UAU</property>
    
        <mapping class="es.albarregas.beans.Alumnos"/>
        <mapping class="es.albarregas.beans.Alumno"/>
        <mapping class="es.albarregas.beans.Caracteristicas"/>
        <mapping class="es.albarregas.beans.Categoria"/>
        <mapping class="es.albarregas.beans.Estado"/>
        <mapping class="es.albarregas.beans.Estancia"/>
        <mapping class="es.albarregas.beans.Localizacion"/>
        <mapping class="es.albarregas.beans.Modelo"/>
        <mapping class="es.albarregas.beans.Marca"/>
        <mapping class="es.albarregas.beans.Producto"/>       
        <mapping class="es.albarregas.beans.Stock"/>
        

        
    </session-factory>
</hibernate-configuration>
